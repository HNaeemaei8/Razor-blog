@page
@model IndexModel

@{
    ViewData["Title"] = "صفحه اصلی";
}
<div class="col-12 mb-3">
    <div class="row">
        <div class="border-bottom col-3 ml-auto mr-auto text-center">
            <h2>تازه ترین مقالات</h2>
        </div>
    </div>
</div>
@foreach (var item in Model.mo)
{
    <div class="col-4 mb-2">
        <div class="card">
            <img src="@item.Picture" class="card-img-top" alt="@item.Picture" title="@item.Picture">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">
                    @item.ShortDescription
                </p>
                <a asp-page="./ArticleDetails" asp-route-Id="@item.Id" class="btn btn-primary">ادامه مطلب</a>
                <a asp-page-handler="Deleted" asp-route-Id="@item.Id" class="btn btn-danger">حذف</a>

            </div>
        </div>
    </div>

}
